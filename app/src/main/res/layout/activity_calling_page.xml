<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calling_bg"
    tools:context=".CallingPage">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mother_photo"
            android:background="@drawable/mother_photo_rounded_corner"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother❤️"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:12"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
           />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginBottom="30dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/grid"
            android:layout_marginEnd="50dp" />
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="50dp" >
            <ImageView
                android:id="@+id/endCall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/calling_icon_red"
                android:src="@drawable/call_circle"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone_call_end_svgrepo_com"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sound_on" />


    </LinearLayout>



</RelativeLayout>