<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <size
        android:width="250dp"
        android:height="50dp" />

    <!-- Background color -->
    <solid
        android:color="@color/white" />

    <!-- Border (stroke) -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- Rounded corners -->
    <corners
        android:radius="10dp" />

</shape>
